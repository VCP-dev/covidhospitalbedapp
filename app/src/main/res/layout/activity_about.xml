<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#F4F4F4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AboutActivity">

    <RelativeLayout
        android:id="@+id/adminbutton"
        android:background="@color/colorPrimary"
        android:layout_weight="0.25"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:textSize="27dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/sysname"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:text="About the app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/sysid"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:text="V 1.0.0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_weight="0.75"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:text="-Description:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="25dp"
                        android:text="This app is for viewing the avaliability of beds in various registered hospitals due to the enlarging covid crisis"
                        android:textColor="#000"
                        android:textSize="18dp" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:text="-Features:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    app:cardElevation="4dp"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="#000"
                            android:layout_margin="25dp"
                            android:textSize="18dp"
                            android:text="- Provides details about realtime avaliability of beds in a registered hospital"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textColor="#000"
                            android:layout_margin="25dp"
                            android:textSize="18dp"
                            android:text="- Details about the location of each hospital registered"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>



                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#fff"
                        android:layout_marginLeft="10dp"
                        android:text="Developed in public interest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </LinearLayout>



        </ScrollView>

    </LinearLayout>



</LinearLayout>